@model IEnumerable<SheepFitMVC.Models.Animals>
@{
    ViewData["Title"] = "Animals Page";
}

<div class="row">
    <div class="col-lg-12">
        <h2>Animals Currently in Stock</h2>
        <h3>Last updated: @(System.DateTime.Now)</h3>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Animal</th>
                    <th>Gender</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var animal in Model)
                {
                    <tr>
                        <td>@animal.Id</td>
                        <td>@animal.sheepGender</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
